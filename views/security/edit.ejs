<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<main class="container">
  <%- include("../partials/flash") %>
  <h1 class="display-6 hd">Edit</h1>
    <form class="row g-3" action="/security/<%= person._id %>?_method=PATCH" method="POST">
        <div class="col-md-12">
          <label for="name" class="form-label">Name: </label>
          <input type="text" class="form-control" name="name" id="name" value="<%= person.name %> ">
        </div>
        <div class="col-md-12">
          <label for="phone" class="form-label">Phone: </label>
          <input type="text" class="form-control" name="phone" id="phone" value="<%= person.phone %>">
        </div>
        <div class="col-md-12">
          <label for="email" class="form-label">Email: </label>
          <input type="text" class="form-control" name="email" id="email" value="<%= person.email %>">
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-outline-dark">Done</button>
        </div>
      </form>


</main>


<%- include('../partials/footer') %>
